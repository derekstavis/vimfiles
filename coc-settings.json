{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "Markdown",
    "typescript",
    "typescript.tsx",
    "javascript",
    "javascript.jsx"
  ],
  "suggest.snippetIndicator": " ⭐︎",

  "coc.preferences.previewAutoClose": false,
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.formatOnType": true,

  "importCost.typescriptExtensions": ["\\.tsx?$"],
  "importCost.javascriptExtensions": ["\\.jsx?$"],
  "importCost.bundleSizeDecoration": "both",
  "importCost.showCalculatingDecoration": true,
  "importCost.debug": false,

  "prettier.tslintIntegration": true,

  "typescript.preferences.quoteStyle": "double",

  "languageserver": {
    "jsref": {
      "command": "~/.config/nvim/node_modules/.bin/jsref",
      "filetypes": [
        "typescript",
        "typescript.tsx",
        "javascript",
        "javascript.jsx"
      ]
    },
    "apollo": {
      "command": "~/.config/nvim/node_modules/apollo-language-server/lib/server.js",
      "args": ["--stdio"],
      "trace.server": "verbose",
      "filetypes": [
        "typescript",
        "typescript.tsx",
        "javascript",
        "javascript.jsx"
      ]
    }
  }
}
